
<%= simple_nested_form_for @public_resource, :html => { class: 'form-horizontal'}  do |f| %>
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th class=" bg w150"><%#= require_span %>区域：</th>
        <td><%= f.text_field :area %></td>
      </tr>

      <tr>
        <th class="bg"><%#= require_span %>机构名称：</th>
        <td><%= f.text_field :institution_name %></td>
      </tr>
      <tr>
        <th class='bg'><%#= require_span %>标题：</th>
        <td><%= f.text_field :level %></td>
      </tr>
      <tr>
        <th class='bg'><%#= require_span %>标题：</th>
        <td><%= f.text_field :genre %></td>
      </tr>
      <tr>
        <th class='bg'><%#= require_span %>标题：</th>
        <td><%= f.text_field :url %></td>
      </tr>

      <tr>
        <th class='bg'><%#= require_span %>文件：</th>
      <td><%= render partial: '/shared/upload_file', locals: { f: f, obj: @public_resource} %></td>
      </tr>
    </table>
    <%= f.submit '提交'%>
<% end %>
