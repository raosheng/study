<div class="user">
<div class="cart">
<h2>注册</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
 
  <div class="form-inputs">
   <div class="login"><span>登&nbsp;&nbsp;录&nbsp;&nbsp;名：</span><%= f.text_field :loginname,required: true, class: 'text form-control',placeholder: "请输入名字" %></div>
   <div class="login"><span>邮&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;箱：</span><%= f.text_field :email, required: true, class: 'text form-control' %></div>
   <div class="login"><span>密&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;码：</span><%= f.text_field :password, required: true, class: 'text form-control', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%></div>
   <div class="login"><span> 确认密码：</span><%= f.text_field :password_confirmation, required: true, class: 'text form-control' %></div> 
  </div>
 

  <div class="button">
    <%= f.button :submit, "注册",style: 'width: 50%' %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
</div>
</div>