<%= form_for ['ancient',@article], :html => { :class => "form-horizontal" } do |f| %>

  <% if @article.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@article.errors.count, "error") %> prohibited this video_site from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :标题, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%#=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :内容, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :content, :class => 'form-control' %>
    </div>
    <%#=f.error_span(:content) %>
  </div>
  <div class="form-group">
    <%= f.label :是否发布, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :status %>
    </div>
    <div class="form-group">
    <%= f.label :推荐, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :tj %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit '创建', :class => 'btn btn-primary' %>
      <%= link_to '返回',  ancient_articles_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
