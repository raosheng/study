
<%#= render "search" %>
<%= link_to '新建', new_ancient_article_path, class: "btn btn-sm btn-info" %>
<div class="pt10 pl10">
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th class="index w30">序号</th>
      <th >博客标题</th>
      <th >博客内容</th>
      <th>博客作者</th>
      <th>博客状态</th>
      <th><%= sort_link @q, :created_at, "创建时间" %></th>
      <th class="cando">操作</th>
    </tr>
  </thead>
  <tbody>
  <% @articles.each_with_index do |article, index| %>
    <tr>
        <td><%= index + 1 %></td>
        <td><%= article.title %></td>
        <td><%= truncate(article.content,length:30) %></td>
        <td><%= article.author %></td>
        <td><%= article.status ? "发布" : "未发布" %></td>
        <td><%= article.created_at.strftime("%y-%m-%d") %></td>
        <td class="textc">
          <%= link_to '查看',ancient_article_path(article, :back => request.fullpath)%>
          <%= link_to '删除', ancient_article_path(article, :back => request.fullpath), :method => :delete, data: { confirm: '確定要刪除吗?' }%>
          </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @articles%>
</div>
